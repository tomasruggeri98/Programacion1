// 5.Ingresar dos lados de un triángulo rectángulo y calcular, la hipotenusa ,
// el perímetro, la superficie e imprimir los resultados.


Console.WriteLine("Para hacer cálculos de un triángulo rectángulo ingrese los siguientes valores: ");
Console.WriteLine("Ingrese Lado1: ");
int Lado1 = int.Parse(Console.ReadLine());

Console.WriteLine("Ingrese Lado2: ");
int Lado2 = int.Parse(Console.ReadLine());

int LadoA = (int)Math.Pow(Lado1, 2);
int LadoB = (int)Math.Pow(Lado2, 2);
int HipotenusaA = LadoA + LadoB;
int HipotenusaB = (int)Math.Sqrt(HipotenusaA);

Console.WriteLine("La hipotenusa del triángulo es: " + HipotenusaB);

int perímetro = Lado1 + Lado2 + HipotenusaB;

Console.WriteLine("El perímetro del mismo es: " + perímetro);

int superficie = (Lado1 * Lado2) / 2;

Console.WriteLine("La superficie es: " + superficie);

