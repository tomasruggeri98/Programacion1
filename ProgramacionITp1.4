// 4.Ingresar los lados de un rectángulo y calcula su perímetro (suma de todos los lados) e imprimirlo.


Console.WriteLine("Para calcular el perímetro de un rectángulo haga lo siguiente: ");
Console.WriteLine("1- Ingrese el tamaño de la base del rectángulo: ");
int Base    = int.Parse(Console.ReadLine());

Console.WriteLine("2- Ingrese el tamaño de la altura del rectángulo");
int Altura  = int.Parse(Console.ReadLine());

Console.WriteLine(" *Calculando perímetro* ");
int Perimetro = Base * 2 + Altura * 2;
Console.WriteLine("El perímetro es: " + Perimetro);
